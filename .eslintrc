{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "plugins": ["@typescript-eslint/eslint-plugin"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "./",
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [2, "single"],
    "no-explicit-any": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "root": true
}
